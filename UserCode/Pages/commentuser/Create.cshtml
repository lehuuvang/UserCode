@model UserCode.Pages.commentuser.CreateModel

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment.CommnentContent" class="control-label"></label>
                <input asp-for="Comment.CommnentContent" class="form-control" />
                <span asp-validation-for="Comment.CommnentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Date" class="control-label"></label>
                <input asp-for="Comment.Date" class="form-control" />
                <span asp-validation-for="Comment.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Chapter.ChapterName" class="control-label"></label>
                <select asp-for="Comment.ChapterId" class="form-control" asp-items="ViewBag.ChapterName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Account.AccountName" class="control-label"></label>
                <select asp-for="Comment.AccountId" class="form-control" asp-items="ViewBag.AccountName"></select>
            </div>
