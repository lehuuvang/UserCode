@page
@inject IHttpContextAccessor HttpContextAccessor
@{
    string accountname = HttpContextAccessor.HttpContext.Session.GetString("AccountName");
}
 <form method="get">
    <ul class="navbar-nav">
        @if (!string.IsNullOrEmpty(accountname))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="" title="Manage">Hello @accountname</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark"
                        asp-page-handler="Logout"> Logout
                    </button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="SignUp" asp-page="Create">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="SignIn" asp-page="Login">Login</a>
            </li>
        }
    </ul>
</form>